<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/singleSong_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/music_album"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/music" />


    <RelativeLayout
        android:id="@+id/music_about_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/music_album"
        android:layout_toRightOf="@id/music_album" >

        <TextView
            android:id="@+id/music_Title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5.0dp"
            android:layout_marginLeft="5.0dp"
            android:text="@string/music_name"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/music_Artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_Title_tv"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5.0dp"
            android:layout_marginTop="8.0dp"
            android:text="@string/artist"
            android:textColor="@android:color/white"/>"
    </RelativeLayout>

</RelativeLayout>